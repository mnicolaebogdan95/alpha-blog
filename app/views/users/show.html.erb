<h1 align="center">Welcome to <%= @user.username %>'s page</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center gravatarImage">
    <%= gravatar_for(@user, size: 150) %>
  </div>
</div>
<h4 align="center"><%= @user.username %>'s articles</h4>

<% if @user.articles.empty? %>
      <div class="empty_list_of_oarticles">
        <p align="center">You haven't any article</p>
       </div>
   <% else %>
       <%= render 'articles/article', obj: @user.articles %>
   
<% end %>